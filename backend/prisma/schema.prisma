generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  // Descomenta esta l√≠nea para que lea del .env
  url       = env("DATABASE_URL")
  // directUrl = env("DIRECT_URL") // Opcional, con la config de arriba no es estricto, pero puedes dejarlo.
}

model Mensaje {
  id        Int      @id @default(autoincrement())
  contenido String
  usuarioId String   
  email     String?  
  fecha     DateTime @default(now())
}