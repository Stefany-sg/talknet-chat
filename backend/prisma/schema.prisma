generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model Mensaje {
  id        Int      @id @default(autoincrement())
  contenido String
  usuarioId String   // ID de Supabase
  email     String?  // Email del usuario
  fecha     DateTime @default(now()) // Antes era createdAt
}